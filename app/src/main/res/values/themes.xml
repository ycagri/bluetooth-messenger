<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bluetooth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorBackgroundSentMessage">@color/purple_200</item>
        <item name="colorBackgroundReceivedMessage">@color/purple_200</item>
        <item name="colorMessageText">@android:color/white</item>

    </style>

    <style name="Theme.Bluetooth.Toolbar" parent="">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="SentMessageBox" parent="Theme.Bluetooth">
        <item name="android:backgroundTint">#00DD00</item>
    </style>

    <style name="ReceivedMessageBox" parent="Theme.Bluetooth">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="SentMessageText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ReceivedMessageText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>