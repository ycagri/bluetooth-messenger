<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="2dp"
                android:top="2dp" />
